android_library {
    name: "SystemUIGoogle-core",
    srcs: [
        "src/**/*.kt",
        "src/**/*.java",
        "src/**/*.aidl",
        "src-aosp/**/*.kt",
        "src-aosp/**/*.java",
        "src-aosp/**/*.aidl",
    ],
    resource_dirs: [
        "res",
        "res-aosp",
    ],
    static_libs: [
        "android.frameworks.stats-V1-java",
        "androidx-constraintlayout_constraintlayout",
        "androidx.appcompat_appcompat-resources",
        "androidx.appsearch_appsearch-builtin-types",
        "androidx.appsearch_appsearch-platform-storage",
        "androidx.appsearch_appsearch",
        "androidx.compose.animation_animation-core",
        "androidx.compose.animation_animation-graphics",
        "androidx.compose.animation_animation",
        "androidx.compose.foundation_foundation-layout",
        "androidx.compose.foundation_foundation",
        "androidx.compose.runtime_runtime-livedata",
        "androidx.compose.runtime_runtime-saveable",
        "androidx.compose.runtime_runtime-tracing",
        "androidx.compose.runtime_runtime",
        "androidx.concurrent_concurrent-futures-ktx",
        "androidx.constraintlayout_constraintlayout-compose",
        "androidx.constraintlayout_constraintlayout-core",
        "androidx.exifinterface_exifinterface",
        "androidx.fragment_fragment-ktx",
        "androidx.fragment_fragment",
        "androidx.lifecycle_lifecycle-runtime-ktx",
        "androidx.navigation_navigation-fragment-ktx",
        "androidx.profileinstaller_profileinstaller",
        "androidx.window_window-java",
        "columbus-lib",
        "gson",
        "guava",
        "smartspace-proto-java",
        "SystemUI-core",
        "SystemUIGoogle-lib",
        "SystemUIPluginLib",
        "SystemUISharedLib",
        "tensorflowlite_java",
        "vendor-pixelatoms-java",
        "vendor.google.google_battery-V1-java",
    ],
    libs: [
        "keepanno-annotations",
    ],
    manifest: "AndroidManifest.xml",
    kotlincflags: ["-Xjvm-default=all"],
    plugins: ["dagger2-compiler"],
    lint: {
        extra_check_modules: ["SystemUILintChecker"],
    },
}

android_app {
    name: "SystemUIGoogle",
    defaults: [
        "platform_app_defaults",
        "SystemUI_optimized_defaults",
    ],
    static_libs: [
        "SystemUIGoogle-core",
    ],
    libs: [
        "ims-common",
    ],
    jni_libs: ["libtensorflowlite_jni"],
    use_embedded_native_libs: true,
    overrides: [
        "SystemUI",
    ],
    resource_dirs: [],
    asset_dirs: ["assets"],
    aaptflags: [
        "-0 .tflite",
        "-0 .vocab",
    ],

    platform_apis: true,
    system_ext_specific: true,
    certificate: "platform",
    privileged: true,

    kotlincflags: ["-Xjvm-default=all"],

    dxflags: ["--multi-dex"],
    optimize: {
        proguard_flags_files: ["proguard.flags"],
    },
    required: [
        "privapp_whitelist_com.android.systemui",
    ],
}
