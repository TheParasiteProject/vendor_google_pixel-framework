<?xml version='1.0' encoding='utf-8' ?>
<com.android.systemui.statusbar.notification.row.ChannelRow android:orientation="vertical"
                      android:id="@id/half_shelf_row"
                      android:padding="8.0dp"
                      android:clickable="true"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:foreground="?android:attr/selectableItemBackground" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:androidprv="http://schemas.android.com/apk/prv/res/android">
  <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
    <Space android:layout_gravity="center_vertical"
           android:id="@id/icon"
           android:padding="8.0dp"
           android:layout_width="48.0dp"
           android:layout_height="48.0dp" />
    <RelativeLayout android:gravity="center|left"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:id="@id/description_container"
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">
      <TextView android:textSize="16.0sp"
                android:textColor="?android:^attr-private/materialColorOnTertiary"
                android:ellipsize="end"
                android:gravity="center|start"
                android:id="@id/channel_name"
                android:paddingBottom="0.0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="@android:string/config_mainBuiltInDisplayCutoutRectApproximation"
                android:paddingStart="8.0dp"
                android:paddingEnd="8.0dp" />
      <TextView android:textSize="14.0sp"
                android:textColor="?android:^attr-private/materialColorOnTertiaryFixed"
                android:ellipsize="end"
                android:gravity="center|start"
                android:id="@id/channel_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_below="@id/channel_name"
                android:fontFamily="@android:string/config_chooserActivity"
                android:paddingStart="8.0dp"
                android:paddingEnd="8.0dp" />
    </RelativeLayout>
    <Switch android:theme="@style/MainSwitch.Settingslib"
            android:layout_gravity="center_vertical"
            android:id="@id/toggle"
            android:padding="8.0dp"
            android:layout_width="wrap_content"
            android:layout_height="48.0dp"
            android:thumb="@drawable/settingslib_thumb_selector"
            android:track="@drawable/settingslib_track_selector" />
  </LinearLayout>
</com.android.systemui.statusbar.notification.row.ChannelRow>