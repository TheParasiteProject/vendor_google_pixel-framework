<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:androidprv="http://schemas.android.com/apk/prv/res/android">
  <Space android:layout_width="0.0dp"
         android:layout_height="fill_parent"
         android:layout_weight="1.0" />
  <LinearLayout android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <FrameLayout android:id="@id/contrast_button_standard"
                 android:background="@drawable/contrast_dialog_button_background"
                 android:layout_width="@dimen/contrast_dialog_button_total_size"
                 android:layout_height="@dimen/contrast_dialog_button_total_size">
      <ImageView android:layout_gravity="center"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_contrast_standard" />
    </FrameLayout>
    <TextView android:textSize="@dimen/contrast_dialog_button_text_size"
              android:textColor="?android:attr/textColorPrimary"
              android:gravity="center|top"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/contrast_dialog_button_text_spacing"
              android:text="@string/quick_settings_contrast_standard" />
  </LinearLayout>
  <Space android:layout_width="@dimen/contrast_dialog_button_horizontal_spacing"
         android:layout_height="fill_parent" />
  <LinearLayout android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <FrameLayout android:id="@id/contrast_button_medium"
                 android:background="@drawable/contrast_dialog_button_background"
                 android:layout_width="@dimen/contrast_dialog_button_total_size"
                 android:layout_height="@dimen/contrast_dialog_button_total_size">
      <ImageView android:layout_gravity="center"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_contrast_medium" />
    </FrameLayout>
    <TextView android:textSize="@dimen/contrast_dialog_button_text_size"
              android:textColor="?android:attr/textColorPrimary"
              android:gravity="center|top"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/contrast_dialog_button_text_spacing"
              android:text="@string/quick_settings_contrast_medium" />
  </LinearLayout>
  <Space android:layout_width="@dimen/contrast_dialog_button_horizontal_spacing"
         android:layout_height="fill_parent" />
  <LinearLayout android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <FrameLayout android:id="@id/contrast_button_high"
                 android:background="@drawable/contrast_dialog_button_background"
                 android:layout_width="@dimen/contrast_dialog_button_total_size"
                 android:layout_height="@dimen/contrast_dialog_button_total_size">
      <ImageView android:layout_gravity="center"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_contrast_high" />
    </FrameLayout>
    <TextView android:textSize="@dimen/contrast_dialog_button_text_size"
              android:textColor="?android:attr/textColorPrimary"
              android:gravity="center|top"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/contrast_dialog_button_text_spacing"
              android:text="@string/quick_settings_contrast_high" />
  </LinearLayout>
  <Space android:layout_width="0.0dp"
         android:layout_height="fill_parent"
         android:layout_weight="1.0" />
</LinearLayout>