<?xml version='1.0' encoding='utf-8' ?>
<com.android.systemui.biometrics.ui.CredentialPasswordView android:theme="?attr/lockPinPasswordStyle"
                      android:orientation="vertical"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:elevation="@dimen/biometric_dialog_elevation" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
  <ScrollView android:id="@id/auth_credential_header"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="?attr/headerStyle">
      <ImageView android:id="@id/icon"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentTop="true"
                 android:contentDescription="@null"
                 style="?attr/headerIconStyle" />
      <TextView android:id="@id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon"
                style="?attr/titleTextAppearance" />
      <TextView android:id="@id/subtitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                style="?attr/subTitleTextAppearance" />
      <TextView android:id="@id/description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/subtitle"
                style="?attr/descriptionTextAppearance" />
    </RelativeLayout>
  </ScrollView>
  <LinearLayout android:orientation="vertical"
                android:id="@id/auth_credential_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
    <ImeAwareEditText android:layout_gravity="center_horizontal"
                      android:id="@id/lockPassword"
                      android:layout_width="208.0dp"
                      android:layout_height="wrap_content"
                      android:minHeight="48.0dp"
                      android:inputType="textPassword"
                      android:imeOptions="actionNext|flagForceAscii|flagNoFullscreen"
                      style="?attr/passwordTextAppearance" />
    <TextView android:layout_gravity="center_horizontal"
              android:id="@id/error"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              style="?attr/errorTextAppearance" />
  </LinearLayout>
</com.android.systemui.biometrics.ui.CredentialPasswordView>