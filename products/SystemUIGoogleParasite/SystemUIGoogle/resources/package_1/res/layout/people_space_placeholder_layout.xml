                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_avatar_with_badge"
                 android:scaleType="centerInside"
                 android:adjustViewBounds="true"
                 android:layout_weight="1.0" />
      <TextView android:textAppearance="@android:style/TextAppearance.DeviceDefault.Notification.Title"
                android:textSize="12.0sp"
                android:textColor="?android:attr/textColorPrimary"
                android:ellipsize="end"
                android:id="@id/name"
                android:paddingTop="2.0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty_user_name"
                android:maxLines="1" />
      <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />
    </LinearLayout>
    <TextView android:textAppearance="@android:style/TextAppearance.DeviceDefault.Notification.Title"
              android:textSize="12.0sp"
              android:textColor="?android:attr/textColorPrimary"
              android:ellipsize="end"
              android:layout_width="0.0dp"
              android:layout_height="wrap_content"
              android:text="@string/empty_status"
              android:maxLines="2"
              android:layout_weight="52.0" />
    <TextView android:layout_width="0.0dp"
              android:layout_height="wrap_content"
              android:layout_weight="6.0" />
  </LinearLayout>
</LinearLayout>