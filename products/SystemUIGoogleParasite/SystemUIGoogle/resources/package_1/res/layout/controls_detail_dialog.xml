<?xml version='1.0' encoding='utf-8' ?>
<FrameLayout android:id="@id/control_detail_root"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:layout_gravity="center|right|top"
                android:orientation="vertical"
                android:id="@id/control_task_view_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="@dimen/controls_task_view_right_margin">
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="4.0dp">
      <ImageView android:id="@id/control_detail_close"
                 android:background="?android:attr/selectableItemBackgroundBorderless"
                 android:padding="12.0dp"
                 android:layout_width="48.0dp"
                 android:layout_height="48.0dp"
                 android:src="@drawable/ic_close"
                 android:tint="@color/control_primary_text"
                 android:contentDescription="@string/accessibility_desc_close" />
      <Space android:layout_width="0.0dp"
             android:layout_height="1.0dp"
             android:layout_weight="1.0" />
      <ImageView android:id="@id/control_detail_open_in_app"
                 android:background="?android:attr/selectableItemBackgroundBorderless"
                 android:padding="12.0dp"
                 android:layout_width="48.0dp"
                 android:layout_height="48.0dp"
                 android:src="@drawable/ic_open_in_new"
                 android:tint="@color/control_primary_text"
                 android:contentDescription="@string/controls_open_app" />
    </LinearLayout>
    <FrameLayout android:id="@id/controls_activity_view"
                 android:layout_width="fill_parent"
                 android:layout_height="0.0dp"
                 android:layout_weight="1.0" />
  </LinearLayout>
</FrameLayout>