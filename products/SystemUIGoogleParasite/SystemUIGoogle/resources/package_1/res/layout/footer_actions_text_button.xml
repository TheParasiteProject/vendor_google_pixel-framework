<?xml version='1.0' encoding='utf-8' ?>
<com.android.systemui.animation.view.LaunchableLinearLayout android:gravity="center_vertical"
                      android:orientation="horizontal"
                      android:background="@drawable/qs_security_footer_background"
                      android:visibility="gone"
                      android:layout_width="0.0dp"
                      android:layout_height="@dimen/qs_security_footer_single_line_height"
                      android:layout_weight="1.0"
                      android:layout_marginEnd="@dimen/qs_footer_action_inset"
                      android:paddingHorizontal="@dimen/qs_footer_padding" xmlns:android="http://schemas.android.com/apk/res/android">
  <ImageView android:gravity="start"
             android:id="@id/icon"
             android:layout_width="@dimen/qs_footer_icon_size"
             android:layout_height="@dimen/qs_footer_icon_size"
             android:src="@drawable/ic_info_outline"
             android:tint="?attr/onSurfaceVariant"
             android:contentDescription="@null"
             android:layout_marginEnd="12.0dp" />
  <TextView android:textAppearance="@style/TextAppearance.QS.SecurityFooter"
            android:textColor="?attr/onSurfaceVariant"
            android:ellipsize="end"
            android:id="@id/text"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_weight="1.0" />
  <ImageView android:id="@id/new_dot"
             android:layout_width="12.0dp"
             android:layout_height="12.0dp"
             android:src="@drawable/fgs_dot"
             android:scaleType="fitCenter"
             android:contentDescription="@string/fgs_dot_content_description" />
  <ImageView android:id="@id/chevron_icon"
             android:layout_width="@dimen/qs_footer_icon_size"
             android:layout_height="@dimen/qs_footer_icon_size"
             android:src="@android:drawable/ic_chevron_end"
             android:tint="?attr/onSurfaceVariant"
             android:contentDescription="@null"
             android:layout_marginStart="8.0dp"
             android:autoMirrored="true" />
</com.android.systemui.animation.view.LaunchableLinearLayout>