<?xml version='1.0' encoding='utf-8' ?>
<com.android.systemui.statusbar.phone.userswitcher.StatusBarUserSwitcherContainer android:gravity="center"
                      android:orientation="horizontal"
                      android:id="@id/user_switcher_container"
                      android:background="@drawable/status_bar_user_chip_bg"
                      android:visibility="gone"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginEnd="@dimen/status_bar_user_chip_end_margin" xmlns:android="http://schemas.android.com/apk/res/android">
  <ImageView android:id="@id/current_user_avatar"
             android:layout_width="@dimen/status_bar_user_chip_avatar_size"
             android:layout_height="@dimen/status_bar_user_chip_avatar_size"
             android:layout_margin="4.0dp"
             android:scaleType="centerInside" />
  <TextView android:textAppearance="@style/TextAppearance.StatusBar.UserChip"
            android:id="@id/current_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8.0dp" />
</com.android.systemui.statusbar.phone.userswitcher.StatusBarUserSwitcherContainer>