<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:id="@id/end_session_dialog"
              android:layout_width="@dimen/large_dialog_width"
              android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:androidprv="http://schemas.android.com/apk/prv/res/android">
  <LinearLayout android:gravity="center"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_top_padding"
                android:layout_marginBottom="@dimen/dialog_bottom_padding"
                style="@style/Widget.SliceView.Panel">
    <ImageView android:gravity="center"
               android:id="@id/end_icon"
               android:layout_width="36.0dp"
               android:layout_height="36.0dp"
               android:importantForAccessibility="no" />
    <TextView android:textSize="24.0sp"
              android:textColor="?android:attr/textColorPrimary"
              android:ellipsize="end"
              android:gravity="center"
              android:id="@id/end_session_dialog_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="16.0dp"
              android:layout_marginBottom="@dimen/dialog_side_padding"
              android:text="@string/media_output_end_session_dialog_summary"
              android:fontFamily="@android:string/config_mainDisplayShape"
              android:layout_marginStart="@dimen/dialog_side_padding"
              android:layout_marginEnd="@dimen/dialog_bottom_padding" />
  </LinearLayout>
  <LinearLayout android:gravity="center|end"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dp"
                android:layout_marginBottom="@dimen/dialog_bottom_padding"
                android:layout_marginStart="@dimen/dialog_side_padding"
                android:layout_marginEnd="@dimen/dialog_side_padding">
    <Button android:ellipsize="end"
            android:layout_gravity="center|end"
            android:id="@id/cancel_button"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:singleLine="true"
            android:layout_marginEnd="8.0dp"
            style="@style/Widget.Dialog.Button.BorderButton" />
    <Button android:ellipsize="end"
            android:layout_gravity="center|end"
            android:id="@id/stop_button"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/media_output_end_session_dialog_stop"
            android:singleLine="true"
            style="@style/Widget.Dialog.Button" />
  </LinearLayout>
</LinearLayout>