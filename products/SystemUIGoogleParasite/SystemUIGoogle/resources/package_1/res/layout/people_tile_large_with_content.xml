<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:layout_gravity="center"
              android:orientation="vertical"
              android:padding="16.0dp"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:androidprv="http://schemas.android.com/apk/prv/res/android">
  <RelativeLayout android:gravity="center|start|top"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
    <LinearLayout android:gravity="center|start|top"
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentStart="true">
      <ImageView android:id="@id/person_icon"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1.0" />
      <ImageView android:id="@id/availability"
                 android:background="@drawable/availability_dot_10dp"
                 android:layout_width="10.0dp"
                 android:layout_height="10.0dp"
                 android:layout_marginStart="-2.0dp" />
    </LinearLayout>
    <TextView android:textAppearance="@android:style/TextAppearance.DeviceDefault.Notification.Title"
              android:textSize="14.0sp"
              android:textColor="?android:^attr-private/textColorOnAccent"
              android:ellipsize="end"
              android:id="@id/messages_count"
              android:background="@drawable/people_space_messages_count_background"
              android:visibility="gone"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:paddingStart="8.0dp"
              android:paddingEnd="8.0dp"
              android:layout_alignParentEnd="true" />
  </RelativeLayout>
  <RelativeLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent">
    <include layout="@layout/people_tile_punctuation_background_large" />
    <include layout="@layout/people_tile_emoji_background_large" />
    <TextView android:textAppearance="@android:style/TextAppearance.DeviceDefault.Notification.Title"
              android:textSize="@dimen/name_text_size_for_large_content"
              android:textColor="?android:attr/textColorPrimary"
              android:ellipsize="end"
              android:gravity="center|start"
              android:layout_gravity="center|start"
              android:id="@id/name"
              android:paddingBottom="@dimen/below_name_text_padding"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/empty_user_name"
              android:singleLine="true" />
    <LinearLayout android:orientation="vertical"
                  android:id="@id/content"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:layout_below="@id/name">
      <LinearLayout android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@id/status_icon_and_label"
                    android:paddingBottom="4.0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <ImageView android:gravity="center|start"
                   android:id="@id/predefined_icon"
                   android:layout_width="@dimen/regular_predefined_icon"
                   android:layout_height="@dimen/regular_predefined_icon"
                   android:tint="?android:attr/textColorSecondary" />
        <TextView android:textAppearance="@android:style/TextAppearance.DeviceDefault.Notification.Title"
                  android:textSize="12.0sp"
                  android:textColor="?android:attr/textColorSecondary"
                  android:ellipsize="end"
                  android:gravity="center_vertical"
                  android:layout_gravity="center"
                  android:id="@id/subtext"
                  android:paddingBottom="4.0dp"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/empty_user_name"
                  android:singleLine="true" />
      </LinearLayout>
      <ImageView android:gravity="center"
                 android:id="@id/image"
                 android:background="@drawable/people_space_content_background"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:scaleType="centerCrop"
                 android:clipToOutline="true" />
      <TextView android:textAppearance="@android:style/TextAppearance.DeviceDefault.Notification.Title"
                android:textSize="@dimen/content_text_size_for_large"
                android:textColor="?android:attr/textColorPrimary"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:id="@id/text_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty_status"
                android:maxLines="2"
                android:singleLine="false" />
    </LinearLayout>
  </RelativeLayout>
</LinearLayout>