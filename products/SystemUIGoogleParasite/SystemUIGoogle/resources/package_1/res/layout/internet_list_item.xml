<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:id="@id/internet_container"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:id="@id/wifi_list"
                android:layout_height="@dimen/internet_dialog_wifi_network_height"
                android:paddingStart="20.0dp"
                android:paddingEnd="24.0dp"
                style="@style/InternetDialog.Network">
    <FrameLayout android:layout_gravity="center|start"
                 android:clickable="false"
                 android:layout_width="24.0dp"
                 android:layout_height="24.0dp">
      <ImageView android:layout_gravity="center"
                 android:id="@id/wifi_icon"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
    </FrameLayout>
    <LinearLayout android:gravity="center|start"
                  android:orientation="vertical"
                  android:id="@id/wifi_network_layout"
                  android:clickable="false"
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/internet_dialog_wifi_network_height"
                  android:layout_weight="1.0"
                  android:layout_marginEnd="30.0dp">
      <TextView android:textSize="14.0sp"
                android:id="@id/wifi_title"
                style="@style/InternetDialog.NetworkTitle" />
      <TextView android:id="@id/wifi_summary"
                style="@style/InternetDialog.NetworkSummary" />
    </LinearLayout>
    <FrameLayout android:layout_gravity="center|end"
                 android:clickable="false"
                 android:layout_width="24.0dp"
                 android:layout_height="fill_parent">
      <ImageView android:layout_gravity="center|end"
                 android:id="@id/wifi_end_icon"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
    </FrameLayout>
  </LinearLayout>
</LinearLayout>