<?xml version='1.0' encoding='utf-8' ?>
<com.android.settingslib.widget.BannerMessageView android:orientation="vertical"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      style="@style/Banner.Preference.SettingsLib" xmlns:android="http://schemas.android.com/apk/res/android">
  <RelativeLayout android:orientation="horizontal"
                  android:id="@id/top_row"
                  android:paddingBottom="8.0dp"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
    <ImageView android:id="@id/banner_icon"
               android:layout_width="24.0dp"
               android:layout_height="24.0dp"
               android:importantForAccessibility="no"
               android:layout_alignParentStart="true" />
    <ImageButton android:id="@id/banner_dismiss_btn"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/settingslib_ic_cross"
                 android:contentDescription="@string/accessibility_banner_message_dismiss"
                 android:layout_alignParentEnd="true"
                 style="@style/Banner.Dismiss.SettingsLib" />
  </RelativeLayout>
  <TextView android:textAppearance="@style/Banner.Title.SettingsLib"
            android:layout_gravity="start"
            android:id="@id/banner_title"
            android:paddingTop="0.0dp"
            android:paddingBottom="4.0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart" />
  <TextView android:textAppearance="@style/Banner.Subtitle.SettingsLib"
            android:layout_gravity="start"
            android:id="@id/banner_subtitle"
            android:paddingTop="0.0dp"
            android:paddingBottom="4.0dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart" />
  <TextView android:textAppearance="@style/Banner.Summary.SettingsLib"
            android:layout_gravity="start"
            android:id="@id/banner_summary"
            android:paddingTop="4.0dp"
            android:paddingBottom="8.0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart" />
  <LinearLayout android:gravity="end"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="8.0dp">
    <Button android:id="@id/banner_negative_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Banner.ButtonText.SettingsLib" />
    <Button android:id="@id/banner_positive_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Banner.ButtonText.SettingsLib" />
  </LinearLayout>
</com.android.settingslib.widget.BannerMessageView>