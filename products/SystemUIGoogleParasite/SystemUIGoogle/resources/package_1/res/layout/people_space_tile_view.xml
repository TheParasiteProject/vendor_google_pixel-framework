<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:id="@id/tile_view"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:androidprv="http://schemas.android.com/apk/prv/res/android">
  <LinearLayout android:orientation="vertical"
                android:background="?android:^attr-private/colorSurface"
                android:padding="12.0dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="4.0dp">
    <LinearLayout android:gravity="start"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
      <ImageView android:id="@id/tile_view_person_icon"
                 android:layout_width="@dimen/avatar_size_for_medium"
                 android:layout_height="@dimen/avatar_size_for_medium" />
      <LinearLayout android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <TextView android:textAppearance="@android:style/TextAppearance.EasyCorrectSuggestion"
                  android:textSize="22.0sp"
                  android:layout_gravity="center_vertical"
                  android:id="@id/tile_view_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingHorizontal="16.0dp" />
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>