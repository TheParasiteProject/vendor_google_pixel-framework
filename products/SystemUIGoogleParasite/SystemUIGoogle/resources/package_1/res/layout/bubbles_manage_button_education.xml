<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:id="@id/manage_education_view"
              android:background="@drawable/bubble_stack_user_education_bg"
              android:paddingTop="28.0dp"
              android:paddingBottom="16.0dp"
              android:clickable="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingEnd="@dimen/bubble_user_education_padding_end"
              android:layout_marginEnd="@dimen/bubble_user_education_margin_end" xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:textAppearance="@android:style/TextAppearance.DeviceDefault.Headline"
            android:textColor="@android:color/system_neutral1_900"
            android:ellipsize="end"
            android:gravity="start"
            android:id="@id/user_education_title"
            android:paddingBottom="16.0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bubbles_user_education_manage_title"
            android:maxLines="2"
            android:fontFamily="@android:string/config_carrierAppInstallDialogComponent"
            android:textAlignment="viewStart"
            android:paddingStart="16.0dp" />
  <TextView android:textAppearance="@android:style/TextAppearance.DeviceDefault.Body2"
            android:textColor="@android:color/system_neutral1_900"
            android:ellipsize="end"
            android:gravity="start"
            android:id="@id/user_education_description"
            android:paddingBottom="24.0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bubbles_user_education_manage"
            android:maxLines="2"
            android:fontFamily="@android:string/config_cameraShutterSound"
            android:textAlignment="viewStart"
            android:paddingStart="16.0dp" />
  <LinearLayout android:orientation="horizontal"
                android:id="@id/button_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <include layout="@layout/bubble_manage_button" />
    <com.android.wm.shell.common.AlphaOptimizedButton android:textSize="@android:dimen/text_size_display_1_material"
                          android:textColor="@android:color/system_neutral1_900"
                          android:layout_gravity="start"
                          android:id="@id/got_it"
                          android:background="@drawable/bubble_manage_btn_bg"
                          android:focusable="true"
                          android:layout_width="wrap_content"
                          android:layout_height="@dimen/bubble_manage_button_height"
                          android:text="@string/bubbles_user_education_got_it"
                          style="@android:style/Widget.DeviceDefault.Button.Borderless" />
  </LinearLayout>
</LinearLayout>