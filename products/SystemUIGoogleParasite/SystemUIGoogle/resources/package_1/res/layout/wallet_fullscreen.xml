<?xml version='1.0' encoding='utf-8' ?>
<FrameLayout android:clipChildren="false"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:androidprv="http://schemas.android.com/apk/prv/res/android">
  <Toolbar android:id="@id/action_bar"
           android:background="@android:color/transparent"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:navigationContentDescription="@null"
           style="?android:attr/actionBarStyle">
    <Button android:textColor="?android:^attr-private/colorAccentPrimary"
            android:layout_gravity="end"
            android:id="@id/wallet_toolbar_app_button"
            android:background="@drawable/wallet_app_button_bg"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="30.0dp"
            android:text="@string/wallet_app_button_label"
            android:textAlignment="center"
            android:paddingHorizontal="@dimen/wallet_button_horizontal_padding" />
  </Toolbar>
  <LinearLayout android:orientation="vertical"
                android:id="@id/card_carousel_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/wallet_card_carousel_container_top_margin">
    <androidx.core.widget.NestedScrollView android:layout_width="fill_parent"
                          android:layout_height="0.0dp"
                          android:layout_weight="1.0">
      <LinearLayout android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dp">
        <ImageView android:layout_gravity="center_horizontal"
                   android:id="@id/icon"
                   android:layout_width="@dimen/wallet_screen_header_view_size"
                   android:layout_height="@dimen/wallet_screen_header_view_size"
                   android:scaleType="center"
                   android:contentDescription="@null"
                   android:layout_marginVertical="10.0dp" />
        <TextView android:textColor="?android:attr/textColorPrimary"
                  android:id="@id/label"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="24.0dp"
                  android:textAlignment="center"
                  android:layout_marginHorizontal="48.0dp" />
        <include layout="@layout/wallet_empty_state" />
        <com.android.systemui.wallet.ui.WalletCardCarousel android:id="@id/card_carousel"
                              android:clipChildren="false"
                              android:clipToPadding="false"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginBottom="24.0dp"
                              android:transitionName="dotIndicator" />
        <Button android:textColor="?android:attr/textColorPrimaryInverse"
                android:layout_gravity="center_horizontal"
                android:id="@id/wallet_action_button"
                android:background="@drawable/wallet_action_button_bg"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginVertical="16.0dp"
                android:paddingHorizontal="@dimen/wallet_button_horizontal_padding"
                android:paddingVertical="@dimen/wallet_button_vertical_padding" />
      </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <View android:id="@id/dynamic_placeholder"
          android:layout_width="fill_parent"
          android:layout_height="0.0dp"
          android:layout_weight="0.1" />
    <Button android:textColor="?android:^attr-private/colorAccentPrimary"
            android:layout_gravity="center_horizontal"
            android:id="@id/wallet_app_button"
            android:background="@drawable/wallet_app_button_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet_app_button_label"
            android:textAlignment="center"
            android:layout_marginVertical="24.0dp"
            android:paddingHorizontal="@dimen/wallet_button_horizontal_padding"
            android:paddingVertical="@dimen/wallet_button_vertical_padding" />
  </LinearLayout>
  <TextView android:textSize="14.0sp"
            android:textColor="#dadce0"
            android:gravity="center"
            android:id="@id/error_view"
            android:background="@drawable/rounded_corners"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80.0dp"
            android:elevation="7.0dp"
            android:layout_marginHorizontal="40.0dp" />
</FrameLayout>