<?xml version='1.0' encoding='utf-8' ?>
<com.android.systemui.statusbar.notification.row.HybridNotificationView android:gravity="bottom|center|start"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:paddingStart="@android:dimen/preference_child_padding_side"
                      android:paddingEnd="12.0dp" xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:textAppearance="@android:style/TextAppearance.Holo.Light.Large"
            android:id="@id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:paddingEnd="4.0dp" />
  <TextView android:id="@id/notification_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:paddingEnd="4.0dp"
            style="@android:style/Widget.DeviceDefault.Toolbar" />
</com.android.systemui.statusbar.notification.row.HybridNotificationView>