<?xml version='1.0' encoding='utf-8' ?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:ellipsize="marquee"
            android:gravity="@integer/biometric_dialog_text_gravity"
            android:id="@id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:marqueeRepeatLimit="1"
            android:importantForAccessibility="no"
            style="@style/TextAppearance.AuthCredential.Title" />
  <TextView android:ellipsize="marquee"
            android:gravity="@integer/biometric_dialog_text_gravity"
            android:id="@id/subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:marqueeRepeatLimit="1"
            android:importantForAccessibility="no"
            style="@style/TextAppearance.AuthCredential.Subtitle" />
  <TextView android:id="@id/description"
            android:scrollbars="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AuthCredential.Description" />
  <Space android:id="@id/space_above_icon"
         android:layout_width="fill_parent"
         android:layout_height="48.0dp" />
  <FrameLayout android:layout_gravity="center"
               android:id="@id/biometric_icon_frame"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
    <include layout="@layout/auth_biometric_icon" />
    <com.android.systemui.biometrics.BiometricPromptLottieViewWrapper android:layout_gravity="center"
                          android:id="@id/biometric_icon_overlay"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:scaleType="fitXY"
                          android:contentDescription="@null" />
  </FrameLayout>
  <Space android:id="@id/space_below_icon"
         android:layout_width="fill_parent"
         android:layout_height="12.0dp" />
  <TextView android:textSize="12.0sp"
            android:textColor="@color/biometric_dialog_gray"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:id="@id/indicator"
            android:fadingEdge="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:accessibilityLiveRegion="polite"
            android:paddingHorizontal="24.0dp" />
  <LinearLayout android:orientation="horizontal"
                android:id="@id/button_bar"
                android:paddingTop="24.0dp"
                android:layout_width="fill_parent"
                android:layout_height="88.0dp"
                style="?android:attr/buttonBarStyle">
    <Space android:id="@id/leftSpacer"
           android:visibility="visible"
           android:layout_width="8.0dp"
           android:layout_height="fill_parent" />
    <Button android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@id/button_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/biometric_dialog_button_negative_max_width"
            android:maxLines="2"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Colored" />
    <Button android:layout_gravity="center_vertical"
            android:id="@id/button_cancel"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/biometric_dialog_button_negative_max_width"
            android:text="@string/cancel"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Colored" />
    <Button android:layout_gravity="center_vertical"
            android:id="@id/button_use_credential"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/biometric_dialog_button_negative_max_width"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Colored" />
    <Space android:id="@id/middleSpacer"
           android:visibility="visible"
           android:layout_width="0.0dp"
           android:layout_height="fill_parent"
           android:layout_weight="1.0" />
    <Button android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@id/button_confirm"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/biometric_dialog_button_positive_max_width"
            android:text="@string/biometric_dialog_confirm"
            android:maxLines="2"
            style="@android:style/Widget.DeviceDefault.Button.Colored" />
    <Button android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@id/button_try_again"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/biometric_dialog_button_positive_max_width"
            android:text="@string/biometric_dialog_try_again"
            android:maxLines="2"
            style="@android:style/Widget.DeviceDefault.Button.Colored" />
    <Space android:id="@id/rightSpacer"
           android:visibility="visible"
           android:layout_width="8.0dp"
           android:layout_height="fill_parent" />
  </LinearLayout>
</merge>