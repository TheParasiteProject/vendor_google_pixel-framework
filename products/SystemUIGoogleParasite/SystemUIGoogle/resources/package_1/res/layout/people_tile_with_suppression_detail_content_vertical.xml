<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:theme="@android:style/Theme.DeviceDefault.DayNight"
              android:gravity="center"
              android:orientation="vertical"
              android:id="@android:id/background"
              android:background="@drawable/people_tile_suppressed_background"
              android:padding="8.0dp"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:clipToOutline="true" xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:layout_width="wrap_content"
            android:layout_height="0.0dp"
            android:layout_weight="1.0" />
  <ImageView android:id="@id/person_icon"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1.0" />
  <TextView android:textAppearance="@android:style/TextAppearance.Holo.Light.Large"
            android:textSize="@dimen/content_text_size_for_large"
            android:textColor="?android:attr/textColorSecondary"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@id/text_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_between_suppressed_layout_items"
            android:text="@string/empty_status"
            android:maxLines="2"
            android:singleLine="false" />
  <ImageView android:id="@id/predefined_icon"
             android:layout_width="@dimen/regular_predefined_icon"
             android:layout_height="@dimen/regular_predefined_icon"
             android:layout_marginTop="@dimen/padding_between_suppressed_layout_items"
             android:tint="?android:attr/textColorSecondary" />
  <TextView android:layout_width="wrap_content"
            android:layout_height="0.0dp"
            android:layout_weight="1.0" />
</LinearLayout>