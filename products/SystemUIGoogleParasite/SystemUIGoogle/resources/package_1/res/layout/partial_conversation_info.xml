<?xml version='1.0' encoding='utf-8' ?>
<com.android.systemui.statusbar.notification.row.PartialConversationInfo android:orientation="vertical"
                      android:id="@id/notification_guts"
                      android:focusable="true"
                      android:clipChildren="false"
                      android:clipToPadding="true"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:paddingStart="@dimen/notification_shade_content_margin_horizontal" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:gravity="center_vertical"
                android:id="@id/header"
                android:paddingTop="@dimen/notification_guts_header_top_padding"
                android:clipChildren="false"
                android:clipToPadding="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
    <ImageView android:id="@id/icon"
               android:layout_width="@dimen/notification_guts_conversation_icon_size"
               android:layout_height="@dimen/notification_guts_conversation_icon_size"
               android:layout_centerVertical="true"
               android:layout_marginEnd="15.0dp"
               android:layout_alignParentStart="true" />
    <LinearLayout android:gravity="center_vertical"
                  android:orientation="vertical"
                  android:id="@id/names"
                  android:layout_width="0.0dp"
                  android:layout_height="wrap_content"
                  android:minHeight="@dimen/notification_guts_conversation_icon_size"
                  android:layout_weight="1.0"
                  android:layout_centerVertical="true"
                  android:layout_toEndOf="@id/conversation_icon"
                  android:layout_alignEnd="@id/conversation_icon">
      <TextView android:ellipsize="end"
                android:id="@id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textDirection="locale"
                style="@style/TextAppearance.NotificationImportanceChannel" />
      <TextView android:ellipsize="end"
                android:id="@id/delegate_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/notification_delegate_header"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:textDirection="locale"
                android:layout_marginStart="2.0dp"
                android:layout_marginEnd="2.0dp"
                style="@style/TextAppearance.NotificationImportanceHeader" />
    </LinearLayout>
    <ImageButton android:id="@id/info"
                 android:background="@drawable/ripple_drawable_20dp"
                 android:layout_width="@dimen/notification_importance_toggle_size"
                 android:layout_height="@dimen/notification_importance_toggle_size"
                 android:src="@drawable/ic_settings"
                 android:tint="?android:attr/colorAccent"
                 android:layout_centerVertical="true"
                 android:contentDescription="@string/notification_more_settings"
                 android:layout_alignParentEnd="true" />
  </LinearLayout>
  <LinearLayout android:orientation="vertical"
                android:id="@id/inline_controls"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/notification_guts_option_vertical_padding"
                android:paddingEnd="@dimen/notification_shade_content_margin_horizontal">
    <com.android.systemui.statusbar.notification.row.ButtonLinearLayout android:orientation="vertical"
                          android:id="@id/settings_link"
                          android:background="@drawable/notification_guts_priority_button_bg"
                          android:padding="@dimen/notification_importance_button_padding"
                          android:focusable="true"
                          android:clickable="true"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content">
      <LinearLayout android:orientation="horizontal"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:src="@drawable/ic_info"
                   android:tint="?android:attr/textColorPrimary"
                   android:layout_centerVertical="true"
                   android:contentDescription="@null"
                   android:layout_marginEnd="8.0dp" />
        <TextView android:id="@id/non_configurable_text"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:textDirection="locale"
                  style="@style/TextAppearance.NotificationImportanceChannelGroup" />
      </LinearLayout>
    </com.android.systemui.statusbar.notification.row.ButtonLinearLayout>
    <RelativeLayout android:gravity="center_vertical"
                    android:id="@id/bottom_buttons"
                    android:layout_width="fill_parent"
                    android:layout_height="60.0dp"
                    android:paddingStart="4.0dp"
                    android:paddingEnd="4.0dp">
      <TextView android:gravity="center|start"
                android:id="@id/turn_off_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200.0dp"
                android:minWidth="@dimen/notification_importance_toggle_size"
                android:minHeight="@dimen/notification_importance_toggle_size"
                android:text="@string/inline_turn_off_notifications"
                android:layout_alignParentStart="true"
                style="@style/TextAppearance.NotificationInfo.Button" />
      <TextView android:gravity="center|end"
                android:id="@id/done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="125.0dp"
                android:minWidth="@dimen/notification_importance_toggle_size"
                android:minHeight="@dimen/notification_importance_toggle_size"
                android:text="@string/inline_done_button"
                android:layout_alignParentEnd="true"
                style="@style/TextAppearance.NotificationInfo.Button" />
    </RelativeLayout>
  </LinearLayout>
</com.android.systemui.statusbar.notification.row.PartialConversationInfo>