<?xml version='1.0' encoding='utf-8' ?>
<PreferenceScreen android:title="@string/assist_gesture_title" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
  <com.android.settingslib.widget.IllustrationPreference android:selectable="false"
                        android:key="gesture_assist_video"
                        settings:lottie_rawRes="@drawable/assist_gesture_settings" />
  <com.android.settingslib.widget.IllustrationPreference android:selectable="false"
                        android:key="gesture_assist_video_silence"
                        settings:lottie_rawRes="@raw/lottie_gesture_assist_silence" />
  <com.android.settings.widget.LabeledSeekBarPreference android:max="@integer/gesture_assist_sensitivity_max"
                        android:title="@string/assist_gesture_squeeze_sensitivity_label"
                        android:selectable="true"
                        android:key="gesture_assist_sensitivity"
                        android:defaultValue="@integer/gesture_assist_sensitivity_default"
                        settings:controller="com.google.android.settings.gestures.assist.AssistGestureSensitivityPreferenceController"
                        settings:textEnd="@string/assist_gesture_squeeze_help_minimum_sensitivity"
                        settings:textStart="@string/assist_gesture_squeeze_help_maximum_sensitivity" />
  <SwitchPreference android:title="@string/assist_gesture_setting_enable_assistant_title"
                    android:key="gesture_assist"
                    android:summary="@string/assist_gesture_setting_enable_assistant_text"
                    settings:controller="com.google.android.settings.gestures.assist.AssistGesturePreferenceController"
                    settings:keywords="@string/keywords_assist_gesture_launch" />
  <SwitchPreference android:title="@string/assist_gesture_setting_enable_wake_title"
                    android:key="gesture_assist_wake"
                    settings:controller="com.google.android.settings.gestures.assist.AssistGestureWakePreferenceController"
                    settings:keywords="@string/keywords_assist_gesture_wake" />
  <SwitchPreference android:title="@string/assist_gesture_setting_enable_ring_silence_title"
                    android:key="gesture_assist_silence"
                    android:summary="@string/assist_gesture_setting_enable_ring_silence_text"
                    settings:controller="com.google.android.settings.gestures.assist.AssistGestureSilenceAlertsPreferenceController"
                    settings:keywords="@string/keywords_assist_gesture_silence" />
</PreferenceScreen>