<?xml version='1.0' encoding='utf-8' ?>
<PreferenceScreen android:title="@string/communal_settings_title"
                  android:key="communal_preference_screen" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
  <PreferenceCategory android:title="@string/communal_what_to_show"
                      android:key="communal_what_to_show">
    <Preference android:title="@string/screensaver_settings_title"
                android:key="screensaver_from_communal_settings"
                android:order="0"
                android:fragment="com.android.settings.dream.DreamSettings"
                settings:controller="com.android.settings.display.ScreenSaverPreferenceController" />
    <Preference android:title="@string/communal_smartspace_title"
                android:key="smartspace_from_communal_settings"
                android:summary="@string/communal_smartspace_summary"
                android:order="10"
                settings:controller="com.google.android.settings.smartspace.CommunalSmartspacePreferenceController" />
    <Preference android:title="@string/lockscreen_settings_title"
                android:key="lockscreen_from_communal_settings"
                android:summary="@string/communal_lock_screen_summary"
                android:order="20"
                android:fragment="com.android.settings.security.LockscreenDashboardFragment" />
  </PreferenceCategory>
  <PreferenceCategory android:title="@string/communal_what_to_use"
                      android:key="communal_what_to_use"
                      android:order="25" />
  <PreferenceCategory android:title="@string/communal_other"
                      android:key="communal_other"
                      android:order="45" />
</PreferenceScreen>