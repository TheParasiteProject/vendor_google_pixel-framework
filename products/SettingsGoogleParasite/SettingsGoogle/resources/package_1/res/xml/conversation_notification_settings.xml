<?xml version='1.0' encoding='utf-8' ?>
<PreferenceScreen android:title=""
                  android:key="conversation_settings" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
  <com.android.settingslib.widget.LayoutPreference android:layout="@layout/settings_entity_header"
                        android:key="pref_app_header"
                        settings:allowDividerBelow="true" />
  <com.android.settings.widget.SettingsMainSwitchPreference android:key="block" />
  <com.android.settings.notification.app.ConversationPriorityPreference android:title="@string/notification_conversation_important"
                        android:key="priority"
                        settings:allowDividerAbove="true"
                        settings:allowDividerBelow="true" />
  <com.android.settingslib.RestrictedSwitchPreference android:icon="@drawable/ic_create_bubble"
                        android:title="@string/bubbles_conversation_toggle_title"
                        android:key="bubble_pref"
                        android:summary="@string/bubbles_conversation_toggle_summary"
                        settings:restrictedSwitchSummary="@string/enabled_by_admin" />
  <com.android.settingslib.widget.FooterPreference android:key="block_desc"
                        settings:allowDividerAbove="false" />
  <com.android.settingslib.RestrictedSwitchPreference android:icon="@drawable/ic_notification_peek"
                        android:title="@string/notification_importance_high_title"
                        android:key="high_importance"
                        android:summary="@string/notification_channel_summary_high" />
  <com.android.settings.notification.app.NotificationSoundPreference android:icon="@drawable/ic_notifications"
                        android:title="@string/notification_channel_sound_title"
                        android:key="ringtone"
                        android:dialogTitle="@string/notification_channel_sound_title"
                        android:showDefault="true"
                        android:showSilent="true" />
  <com.android.settings.RestrictedListPreference android:icon="@drawable/ic_notification_vis_override"
                        android:title="@string/app_notification_visibility_override_title"
                        android:key="visibility_override" />
  <com.android.settingslib.RestrictedSwitchPreference android:icon="@drawable/ic_notification_dot"
                        android:title="@string/notification_channel_badge_title"
                        android:key="badge"
                        settings:restrictedSwitchSummary="@string/enabled_by_admin" />
  <com.android.settingslib.RestrictedSwitchPreference android:icon="@drawable/ic_lightbulb_outline_24"
                        android:title="@string/notification_show_lights_title"
                        android:key="lights" />
  <com.android.settingslib.RestrictedSwitchPreference android:icon="@drawable/ic_volume_ringer_vibrate"
                        android:title="@string/notification_vibrate_title"
                        android:key="vibrate" />
  <Preference android:icon="@drawable/ic_demote_conversation"
              android:title="@string/demote_conversation_title"
              android:key="demote"
              android:summary="@string/demote_conversation_summary"
              settings:allowDividerAbove="true" />
  <Preference android:icon="@drawable/ic_promote_conversation"
              android:title="@string/promote_conversation_title"
              android:key="convo_promote"
              android:summary="@string/promote_conversation_summary" />
</PreferenceScreen>