<?xml version='1.0' encoding='utf-8' ?>
<PreferenceScreen android:persistent="false"
                  android:title="@string/one_handed_title" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res-auto">
  <com.android.settingslib.widget.TopIntroPreference android:title="@string/one_handed_mode_intro_text"
                        android:key="gesture_one_handed_mode_intro" />
  <com.android.settingslib.widget.IllustrationPreference android:key="one_handed_header"
                        app:lottie_rawRes="@raw/lottie_one_hand_mode"
                        app:searchable="false" />
  <com.android.settingslib.widget.MainSwitchPreference android:title="@string/one_handed_mode_enabled"
                        android:key="gesture_one_handed_mode_enabled_main_switch"
                        app:controller="com.android.settings.gestures.OneHandedMainSwitchPreferenceController"
                        app:keywords="@string/keywords_one_handed" />
  <PreferenceCategory android:title="@string/one_handed_mode_swipe_down_category"
                      android:key="gesture_one_handed_mode_swipe_down"
                      app:controller="com.android.settings.gestures.OneHandedPreferenceCategoryController">
    <com.android.settingslib.widget.SelectorWithWidgetPreference android:title="@string/one_handed_action_pull_down_screen_title"
                          android:key="gesture_one_handed_action_pull_screen_down"
                          android:summary="@string/one_handed_action_pull_down_screen_summary"
                          app:controller="com.android.settings.gestures.OneHandedActionPullDownPrefController" />
    <com.android.settingslib.widget.SelectorWithWidgetPreference android:title="@string/one_handed_action_show_notification_title"
                          android:key="gesture_one_handed_action_show_notification"
                          android:summary="@string/one_handed_action_show_notification_summary"
                          app:controller="com.android.settings.gestures.OneHandedActionShowNotificationPrefController" />
  </PreferenceCategory>
  <com.android.settingslib.widget.FooterPreference android:title="@string/one_handed_mode_footer_text"
                        android:selectable="false"
                        android:key="one_handed_mode_footer"
                        app:searchable="false" />
</PreferenceScreen>