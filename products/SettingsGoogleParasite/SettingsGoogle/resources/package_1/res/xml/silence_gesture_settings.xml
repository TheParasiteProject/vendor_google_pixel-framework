<?xml version='1.0' encoding='utf-8' ?>
<PreferenceScreen android:title="@string/gesture_silence_title" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
  <com.android.settings.widget.VideoPreference android:key="gesture_silence_video"
                        settings:animation="@raw/gesture_silence"
                        settings:preview="@drawable/gesture_silence" />
  <SwitchPreference android:title="@string/gesture_silence_title"
                    android:key="gesture_silence"
                    android:summary="@string/gesture_silence_summary"
                    settings:controller="com.google.android.settings.aware.SilenceGesturePreferenceController"
                    settings:allowDividerAbove="true"
                    settings:keywords="@string/keywords_gesture_silence" />
  <com.android.settingslib.widget.FooterPreference android:title="@string/gesture_silence_footer"
                        android:selectable="false"
                        android:key="silence_gesture_footer"
                        settings:controller="com.google.android.settings.aware.SilenceGestureFooterPreferenceController"
                        settings:searchable="false" />
</PreferenceScreen>