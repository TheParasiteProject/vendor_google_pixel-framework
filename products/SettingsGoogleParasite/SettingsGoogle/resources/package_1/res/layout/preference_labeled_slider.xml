<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingTop="16.0dp"
                android:paddingBottom="8.0dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingStart="?android:attr/listPreferredItemPaddingStart"
                android:paddingEnd="?android:attr/listPreferredItemPaddingEnd" xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="?android:attr/textColorPrimary"
            android:ellipsize="marquee"
            android:id="@android:id/title"
            android:fadingEdge="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:hyphenationFrequency="normalFast"
            android:lineBreakWordStyle="phrase" />
  <TextView android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary"
            android:id="@android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@android:id/title"
            android:textAlignment="viewStart"
            android:hyphenationFrequency="normalFast"
            android:lineBreakWordStyle="phrase" />
  <include android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_below="@android:id/summary"
           layout="@layout/icon_discrete_slider" />
  <LinearLayout android:orientation="horizontal"
                android:id="@id/label_frame"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/seekbar_frame">
    <TextView android:textAppearance="?android:attr/textAppearanceSmall"
              android:textColor="?android:attr/textColorSecondary"
              android:gravity="start"
              android:layout_gravity="center|start|top"
              android:id="@android:id/text1"
              android:layout_width="0.0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1.0" />
    <TextView android:textAppearance="?android:attr/textAppearanceSmall"
              android:textColor="?android:attr/textColorSecondary"
              android:gravity="end"
              android:layout_gravity="center|end|top"
              android:id="@android:id/text2"
              android:layout_width="0.0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1.0" />
  </LinearLayout>
</RelativeLayout>