<?xml version='1.0' encoding='utf-8' ?>
<com.google.android.setupdesign.GlifLayout android:icon="@drawable/ic_qrcode_32dp"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                style="@style/SudContentFrame">
    <TextView android:id="@android:id/summary"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAlignment="center"
              android:layout_marginStart="?attr/sudMarginStart"
              android:layout_marginEnd="?attr/sudMarginEnd"
              android:accessibilityLiveRegion="polite"
              style="@style/TextAppearance.SudGlifBody" />
    <LinearLayout android:gravity="center"
                  android:orientation="vertical"
                  android:id="@id/wifi_dpp_layout"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent">
      <ImageView android:id="@id/qrcode_view"
                 android:layout_width="@dimen/qrcode_size"
                 android:layout_height="@dimen/qrcode_size"
                 android:src="@android:color/transparent" />
      <TextView android:textAppearance="@android:style/TextAppearance.Material.Body1"
                android:textColor="?android:attr/textColorSecondary"
                android:id="@id/password"
                android:focusable="true"
                android:longClickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24.0dp"
                android:textIsSelectable="true"
                android:textAlignment="center" />
    </LinearLayout>
  </LinearLayout>
</com.google.android.setupdesign.GlifLayout>