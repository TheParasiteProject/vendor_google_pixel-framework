<?xml version='1.0' encoding='utf-8' ?>
<com.google.android.setupdesign.GlifLayout android:id="@id/setup_wizard_layout"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      settings:sucHeaderText="@string/security_settings_remoteauth_settings_title"
                      settings:sucUsePartnerResource="false"
                      settings:sudDescriptionText="@string/security_settings_remoteauth_settings_description" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
  <LinearLayout android:gravity="start"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/remoteauth_padding_horizontal">
    <androidx.recyclerview.widget.RecyclerView android:id="@id/registered_authenticator_list"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/remoteauth_settings_top_margin" />
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@id/add_authenticator_layout"
                          android:clickable="true"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:minHeight="@dimen/remoteauth_touchable_area_minimum_span"
                          android:layout_marginVertical="@dimen/remoteauth_device_vertical_margin">
      <ImageView android:id="@id/add_icon"
                 android:background="@drawable/ic_add_24dp"
                 android:clickable="false"
                 android:layout_width="@dimen/remoteauth_icon_small_size"
                 android:layout_height="@dimen/remoteauth_icon_small_size"
                 settings:layout_constraintBottom_toBottomOf="parent"
                 settings:layout_constraintStart_toStartOf="parent"
                 settings:layout_constraintTop_toTopOf="parent" />
      <TextView android:textSize="@dimen/remoteauth_device_name_text_size"
                android:textColor="?android:attr/textColorPrimary"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/security_settings_remoteauth_settings_register_new_authenticator"
                android:layout_marginHorizontal="@dimen/remoteauth_settings_device_horizontal_margin"
                settings:layout_constraintBottom_toBottomOf="parent"
                settings:layout_constraintStart_toEndOf="@id/add_icon"
                settings:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView android:background="@drawable/ic_info_outline_24dp"
               android:layout_width="@dimen/remoteauth_icon_small_size"
               android:layout_height="@dimen/remoteauth_icon_small_size"
               android:layout_marginTop="@dimen/remoteauth_settings_top_margin" />
    <TextView android:textSize="@dimen/remoteauth_fragment_subtitle_text_size"
              android:textColor="?android:attr/textColorPrimary"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/remoteauth_settings_top_margin"
              android:text="@string/security_settings_remoteauth_settings_info_footer" />
    <TextView android:textSize="@dimen/remoteauth_fragment_subtitle_text_size"
              android:textColor="?android:attr/textColorPrimary"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/remoteauth_settings_top_margin"
              android:text="@string/security_settings_remoteauth_settings_learn_more" />
  </LinearLayout>
</com.google.android.setupdesign.GlifLayout>