<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:id="@id/main_content"
              android:background="@drawable/settings_panel_background"
              android:fitsSystemWindows="true"
              android:layout_width="fill_parent"
              android:layout_height="@dimen/notif_channel_panel_max_height"
              android:maxHeight="@dimen/notif_channel_panel_max_height" xmlns:android="http://schemas.android.com/apk/res/android">
  <FrameLayout android:id="@android:id/list_container"
               android:layout_width="fill_parent"
               android:layout_height="0.0px"
               android:layout_weight="1.0" />
  <View android:id="@id/footer_divider"
        android:background="?android:attr/dividerHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/horizontal_divider_height" />
  <LinearLayout android:orientation="horizontal"
                android:id="@id/footer"
                android:paddingTop="8.0dp"
                android:paddingBottom="8.0dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
    <Button android:id="@id/see_more"
            android:layout_width="wrap_content"
            android:layout_height="48.0dp"
            android:text="@string/see_more"
            android:layout_marginStart="12.0dp"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Colored" />
    <Space android:layout_width="0.0dp"
           android:layout_height="fill_parent"
           android:layout_weight="1.0" />
    <Button android:id="@id/done"
            android:layout_width="wrap_content"
            android:layout_height="48.0dp"
            android:text="@string/done"
            android:layout_marginEnd="12.0dp"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Colored" />
  </LinearLayout>
</LinearLayout>