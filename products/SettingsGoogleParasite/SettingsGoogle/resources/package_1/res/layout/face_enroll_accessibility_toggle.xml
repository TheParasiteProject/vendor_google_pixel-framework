<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="?attr/face_layout_theme" xmlns:android="http://schemas.android.com/apk/res/android">
  <View android:background="?android:attr/listDivider"
        android:layout_width="fill_parent"
        android:layout_height="1.0dp"
        android:layout_alignParentTop="true" />
  <com.google.android.setupdesign.view.RichTextView android:textSize="@dimen/sud_description_text_size"
                        android:textColor="?android:attr/textColorPrimary"
                        android:gravity="start"
                        android:id="@id/title"
                        android:paddingTop="8.0dp"
                        android:paddingBottom="4.0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/toggle"
                        android:layout_alignParentStart="true"
                        android:paddingHorizontal="8.0dp" />
  <TextView android:textColor="?android:attr/textColorSecondary"
            android:id="@id/subtitle"
            android:paddingBottom="8.0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/security_settings_face_enroll_introduction_accessibility_expanded"
            android:layout_below="@id/title"
            android:layout_toStartOf="@id/toggle"
            android:layout_alignParentStart="true"
            android:paddingHorizontal="8.0dp" />
  <View android:background="?android:attr/listDivider"
        android:layout_width="1.0dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/toggle"
        android:layout_alignBottom="@id/toggle"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/toggle" />
  <Switch android:id="@id/toggle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:checked="true"
          android:layout_centerVertical="true"
          android:layout_alignParentEnd="true" />
  <View android:background="?android:attr/listDivider"
        android:layout_width="fill_parent"
        android:layout_height="1.0dp"
        android:layout_below="@id/subtitle" />
</RelativeLayout>