<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingStart="?android:attr/listPreferredItemPaddingStart"
              android:paddingEnd="?android:attr/listPreferredItemPaddingEnd" xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.Toolbar.Title"
            android:textColor="?android:attr/textColorPrimary"
            android:id="@android:id/title"
            android:paddingTop="0.0dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.0dp"
            android:layout_marginBottom="5.0dp"
            android:fontFamily="@android:string/config_mainBuiltInDisplayCutoutRectApproximation"
            android:hyphenationFrequency="normalFast"
            android:lineBreakWordStyle="phrase" />
  <TextView android:textAppearance="?android:attr/textAppearanceListItemSecondary"
            android:textColor="?android:attr/textColorSecondary"
            android:id="@android:id/summary"
            android:paddingBottom="5.0dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="10"
            android:hyphenationFrequency="normalFast"
            android:lineBreakWordStyle="phrase" />
  <ProgressBar android:id="@id/color_bar"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:scaleY="1.0"
               style="?android:attr/progressBarStyleHorizontal" />
  <LinearLayout android:orientation="horizontal"
                android:id="@id/label_bar"
                android:paddingTop="2.0dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
    <TextView android:textAppearance="?android:attr/textAppearanceListItemSecondary"
              android:textColor="?android:attr/textColorSecondary"
              android:id="@android:id/text1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
    <Space android:layout_width="0.0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1.0" />
    <TextView android:textAppearance="?android:attr/textAppearanceListItemSecondary"
              android:textColor="?android:attr/textColorSecondary"
              android:id="@android:id/text2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
  </LinearLayout>
</LinearLayout>