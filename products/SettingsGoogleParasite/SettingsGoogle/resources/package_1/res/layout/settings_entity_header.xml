<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:orientation="horizontal"
                android:id="@id/entity_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingStart="?android:attr/listPreferredItemPaddingStart"
                android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
                style="@style/EntityHeader" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@id/entity_header_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
    <ImageView android:id="@id/entity_header_icon"
               android:layout_width="48.0dp"
               android:layout_height="48.0dp"
               android:antialias="true"
               android:scaleType="fitCenter" />
    <TextView android:ellipsize="marquee"
              android:gravity="center"
              android:id="@id/entity_header_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8.0dp"
              android:singleLine="false"
              android:textDirection="locale"
              style="@style/TextAppearance.EntityHeaderTitle" />
    <TextView android:id="@id/install_type"
              android:visibility="gone"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="2.0dp"
              style="@style/TextAppearance.EntityHeaderSummary" />
    <TextView android:id="@id/entity_header_summary"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="2.0dp"
              android:singleLine="false"
              android:textAlignment="center"
              style="@style/TextAppearance.EntityHeaderSummary" />
    <TextView android:id="@id/entity_header_second_summary"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxLines="4"
              android:singleLine="false"
              style="@style/TextAppearance.EntityHeaderSummary" />
  </LinearLayout>
  <LinearLayout android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">
    <ImageButton android:id="@android:id/button1"
                 android:visibility="gone"
                 android:layout_width="wrap_content"
                 android:layout_height="0.0dp"
                 android:src="@null"
                 android:tint="?android:attr/colorAccent"
                 android:minWidth="24.0dp"
                 android:layout_weight="1.0"
                 style="?android:attr/actionOverflowButtonStyle" />
    <ImageButton android:id="@android:id/button2"
                 android:visibility="gone"
                 android:layout_width="wrap_content"
                 android:layout_height="0.0dp"
                 android:src="@null"
                 android:tint="?android:attr/colorAccent"
                 android:minWidth="24.0dp"
                 android:layout_weight="1.0"
                 style="?android:attr/actionOverflowButtonStyle" />
  </LinearLayout>
</RelativeLayout>