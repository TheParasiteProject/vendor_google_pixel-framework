<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="horizontal"
              android:id="@id/erase_esim_container"
              android:focusable="true"
              android:visibility="gone"
              android:clickable="true"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="40.0dp"
              style="@style/SudDescription" xmlns:android="http://schemas.android.com/apk/res/android">
  <CheckBox android:layout_gravity="center_vertical"
            android:id="@id/erase_esim"
            android:focusable="false"
            android:clickable="false"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            style="@style/SudCheckBox" />
  <LinearLayout android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/reset_esim_title"
              style="@style/TextAppearance.PreferenceTitle.SettingsLib" />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/reset_esim_desc"
              style="?android:attr/textAppearanceSmall" />
  </LinearLayout>
</LinearLayout>