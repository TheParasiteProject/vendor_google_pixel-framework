<?xml version='1.0' encoding='utf-8' ?>
<FrameLayout android:id="@id/illustration_frame"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
  <ImageView android:id="@id/image_background"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/protection_background"
             android:adjustViewBounds="true"
             android:maxHeight="@dimen/accessibility_imageview_size" />
  <com.airbnb.lottie.LottieAnimationView android:id="@id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="@dimen/accessibility_imageview_size" />
</FrameLayout>