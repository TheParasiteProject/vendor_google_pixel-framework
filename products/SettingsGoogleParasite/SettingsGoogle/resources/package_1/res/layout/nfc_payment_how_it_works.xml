                  android:paddingLeft="16.0dp"
                  android:paddingRight="16.0dp"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/nfc_how_it_works_title" />
        <TextView android:textSize="16.0sp"
                  android:textColor="#ff263238"
                  android:id="@id/nfc_how_it_works_content"
                  android:paddingLeft="16.0dp"
                  android:paddingTop="10.0dp"
                  android:paddingRight="16.0dp"
                  android:paddingBottom="18.0dp"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/nfc_how_it_works_content" />
      </LinearLayout>
    </ScrollView>
    <RelativeLayout android:background="#ffb2dfdb"
                    android:layout_width="fill_parent"
                    android:layout_height="48.0dp"
                    android:layout_alignParentBottom="true">
      <Button android:textSize="14.0sp"
              android:textColor="#263238"
              android:id="@id/nfc_how_it_works_button"
              android:background="?android:attr/selectableItemBackground"
              android:layout_width="wrap_content"
              android:layout_height="48.0dp"
              android:text="@string/nfc_how_it_works_got_it"
              android:layout_marginEnd="20.0dp"
              android:layout_alignParentEnd="true"
              style="?android:attr/borderlessButtonStyle" />
    </RelativeLayout>
  </RelativeLayout>
</FrameLayout>