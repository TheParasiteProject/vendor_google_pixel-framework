                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fillViewport="true">
      <LinearLayout android:orientation="vertical"
                    android:id="@id/nfc_how_it_works_image_text"
                    android:paddingLeft="16.0dp"
                    android:paddingTop="72.0dp"
                    android:paddingRight="16.0dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
        <ImageView android:gravity="center"
                   android:id="@id/nfc_how_it_works_image"
                   android:layout_width="fill_parent"
                   android:layout_height="188.0dp"
                   android:src="@drawable/nfc_how_it_works" />
