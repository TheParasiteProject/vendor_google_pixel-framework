<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:paddingBottom="?android:attr/dialogPreferredPadding"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingHorizontal="?android:attr/dialogPreferredPadding" xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:layout_gravity="center"
            android:id="@id/share_audio_subtitle1"
            android:paddingBottom="14.0dp"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textFontWeight="500"
            style="@style/DeviceAudioSharingText" />
  <TextView android:layout_gravity="center"
            android:id="@id/share_audio_subtitle2"
            android:paddingBottom="24.0dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textFontWeight="400"
            style="@style/DeviceAudioSharingText" />
  <ImageView android:layout_gravity="center"
             android:id="@id/share_audio_guidance"
             android:visibility="gone"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/audio_sharing_guidance" />
  <androidx.recyclerview.widget.RecyclerView android:layout_gravity="center"
                        android:id="@id/btn_list"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="false" />
  <Button android:layout_gravity="center"
          android:id="@id/share_btn"
          android:background="@drawable/audio_sharing_rounded_bg_ripple"
          android:visibility="gone"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="4.0dp"
          style="@style/SettingsLibActionButton" />
  <Button android:layout_gravity="center"
          android:id="@id/cancel_btn"
          android:background="@drawable/audio_sharing_rounded_bg_ripple"
          android:visibility="gone"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="4.0dp"
          android:text="Not now"
          style="@style/SettingsLibActionButton" />
</LinearLayout>