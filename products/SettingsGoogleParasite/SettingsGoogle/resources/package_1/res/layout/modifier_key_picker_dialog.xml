<?xml version='1.0' encoding='utf-8' ?>
<ScrollView android:id="@id/modifier_key_fragment_scroll_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:androidprv="http://schemas.android.com/apk/prv/res/android">
  <LinearLayout android:orientation="vertical"
                android:id="@id/modifier_key_fragment_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:divider="?android:attr/dividerHorizontal"
                  android:showDividers="end">
      <TextView android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_gravity="center_horizontal"
                android:id="@id/modifier_key_picker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24.0dp"
                android:layout_marginBottom="8.0dp"
                android:text="@string/modifier_keys_picker_title"
                android:layout_marginStart="16.0dp"
                android:layout_marginEnd="16.0dp" />
      <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_gravity="center_horizontal"
                android:id="@id/modifier_key_picker_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dp"
                android:layout_marginBottom="16.0dp"
                android:layout_marginStart="16.0dp"
                android:layout_marginEnd="16.0dp" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:divider="?android:attr/dividerHorizontal"
                  android:showDividers="end">
      <ListView android:id="@id/modifier_key_picker"
                android:padding="16.0dp"
                android:layout_width="wrap_content"
                android:layout_height="352.0dp"
                android:listSelector="@drawable/modifier_key_lisetview_background"
                android:divider="@null"
                android:dividerHeight="8.0dp" />
    </LinearLayout>
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.0dp"
                    android:layout_marginBottom="6.0dp"
                    android:layout_marginStart="8.0dp"
                    android:layout_marginEnd="8.0dp">
      <Button android:textColor="?android:attr/textColorPrimary"
              android:id="@id/modifier_key_cancel_button"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="6.0dp"
              android:layout_marginBottom="6.0dp"
              android:text="@string/modifier_keys_cancel"
              android:drawablePadding="9.0dp"
              android:layout_marginStart="8.0dp"
              android:layout_alignParentStart="true"
              android:paddingVertical="14.0dp"
              style="@style/ModifierKeyButtonCancel" />
      <Button android:textColor="?android:^attr-private/materialColorOnPrimaryFixedVariant"
              android:id="@id/modifier_key_done_button"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="6.0dp"
              android:layout_marginBottom="6.0dp"
              android:text="@string/modifier_keys_done"
              android:drawablePadding="9.0dp"
              android:layout_marginEnd="8.0dp"
              android:layout_alignParentEnd="true"
              android:paddingVertical="14.0dp"
              style="@style/ModifierKeyButtonDone" />
    </RelativeLayout>
  </LinearLayout>
</ScrollView>