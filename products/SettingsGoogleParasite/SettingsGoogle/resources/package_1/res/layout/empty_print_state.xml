<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:gravity="center"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_marginStart="16.0dp"
              android:layout_marginEnd="16.0dp" xmlns:android="http://schemas.android.com/apk/res/android">
  <ImageView android:layout_width="120.0dp"
             android:layout_height="110.0dp"
             android:layout_marginBottom="12.0dp"
             android:src="@android:drawable/ic_print"
             android:scaleType="fitEnd"
             android:tint="?android:attr/colorForeground"
             android:alpha="0.1"
             android:importantForAccessibility="no" />
  <TextView android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:id="@id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16.0dp" />
  <Button android:textColor="?android:attr/textColorSecondary"
          android:id="@id/add_new_service"
          android:visibility="gone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/print_menu_item_add_service"
          style="?android:attr/borderlessButtonStyle" />
</LinearLayout>