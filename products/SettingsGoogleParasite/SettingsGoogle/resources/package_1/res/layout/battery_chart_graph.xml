<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingStart="?android:attr/listPreferredItemPaddingStart"
              android:paddingEnd="?android:attr/listPreferredItemPaddingEnd" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
  <TextView android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary"
            android:id="@id/chart_summary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/battery_usage_chart_graph_hint_last_full_charge"
            android:textAlignment="viewStart"
            android:layout_marginVertical="16.0dp" />
  <LinearLayout android:orientation="vertical"
                android:id="@id/battery_chart_group"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:alpha="0.0">
    <com.android.settings.fuelgauge.batteryusage.BatteryChartView android:textAppearance="?android:attr/textAppearanceSmall"
                          android:id="@id/daily_battery_chart"
                          android:visibility="gone"
                          android:layout_width="fill_parent"
                          android:layout_height="@dimen/chartview_layout_height"
                          android:layout_marginBottom="16.0dp"
                          android:contentDescription="@string/daily_battery_usage_chart"
                          settings:textColor="?android:attr/textColorSecondary" />
    <com.android.settings.fuelgauge.batteryusage.BatteryChartView android:textAppearance="?android:attr/textAppearanceSmall"
                          android:id="@id/hourly_battery_chart"
                          android:visibility="visible"
                          android:layout_width="fill_parent"
                          android:layout_height="@dimen/chartview_layout_height"
                          android:layout_marginBottom="16.0dp"
                          android:contentDescription="@string/hourly_battery_usage_chart"
                          settings:textColor="?android:attr/textColorSecondary" />
  </LinearLayout>
  <TextView android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14.0dp"
            android:textColor="?android:attr/textColorSecondary"
            android:id="@id/companion_text"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</LinearLayout>