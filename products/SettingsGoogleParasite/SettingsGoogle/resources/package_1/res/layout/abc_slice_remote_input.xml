<?xml version='1.0' encoding='utf-8' ?>
<androidx.slice.widget.RemoteInputView android:id="@id/remote_input"
                      android:background="@drawable/abc_slice_remote_input_bg"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <view android:textAppearance="?android:attr/textAppearance"
        android:textSize="16.0sp"
        android:textColor="#ffffffff"
        android:textColorHint="#99ffffff"
        android:ellipsize="start"
        android:gravity="center|start"
        android:id="@id/remote_input_text"
        android:background="@null"
        android:paddingLeft="16.0dp"
        android:paddingTop="2.0dp"
        android:paddingRight="12.0dp"
        android:paddingBottom="4.0dp"
        android:layout_width="0.0dp"
        android:layout_height="fill_parent"
        android:singleLine="true"
        android:layout_weight="1.0"
        android:inputType="textAutoCorrect|textCapSentences|textShortMessage"
        android:imeOptions="actionSend|flagNoExtractUi|flagNoFullscreen"
        android:paddingStart="16.0dp"
        android:paddingEnd="12.0dp"
        class="androidx.slice.widget.RemoteInputView$RemoteEditText" />
  <FrameLayout android:layout_gravity="center_vertical"
               android:layout_width="wrap_content"
               android:layout_height="fill_parent">
    <ImageButton android:layout_gravity="center"
                 android:id="@id/remote_input_send"
                 android:background="@drawable/abc_slice_ripple_drawable"
                 android:paddingLeft="12.0dp"
                 android:paddingTop="16.0dp"
                 android:paddingRight="24.0dp"
                 android:paddingBottom="16.0dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/abc_ic_slice_send"
                 android:tint="#ffffff"
                 android:paddingStart="12.0dp"
                 android:paddingEnd="24.0dp"
                 android:tintMode="src_in" />
    <ProgressBar android:layout_gravity="center"
                 android:id="@id/remote_input_progress"
                 android:visibility="invisible"
                 android:layout_width="24.0dp"
                 android:layout_height="24.0dp"
                 android:layout_marginRight="6.0dp"
                 android:indeterminate="true"
                 android:layout_marginEnd="6.0dp"
                 style="?android:attr/progressBarStyleSmall" />
  </FrameLayout>
</androidx.slice.widget.RemoteInputView>