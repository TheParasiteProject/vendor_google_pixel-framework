<?xml version='1.0' encoding='utf-8' ?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:textAppearance="@style/TextAppearance.Switch"
            android:textColor="?android:attr/textColorPrimaryInverse"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@id/switch_text"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_weight="1.0"
            android:textAlignment="viewStart" />
  <ImageView android:theme="@android:style/Theme.Material"
             android:layout_gravity="center_vertical"
             android:id="@id/restricted_icon"
             android:visibility="gone"
             android:layout_width="@dimen/restricted_icon_size"
             android:layout_height="@dimen/restricted_icon_size"
             android:tint="?android:attr/colorAccent"
             android:layout_marginEnd="@dimen/restricted_icon_margin_end" />
  <com.android.settings.widget.ToggleSwitch android:theme="@style/Widget.SwitchBar.Switch"
                        android:layout_gravity="center_vertical"
                        android:id="@id/switch_widget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
</merge>