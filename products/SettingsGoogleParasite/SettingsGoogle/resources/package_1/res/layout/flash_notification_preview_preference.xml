<?xml version='1.0' encoding='utf-8' ?>
<FrameLayout android:background="@android:color/transparent"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:minHeight="?android:attr/listPreferredItemHeight"
             android:paddingStart="?android:attr/listPreferredItemPaddingStart"
             android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
             android:paddingVertical="@dimen/settingslib_switchbar_margin" xmlns:android="http://schemas.android.com/apk/res/android">
  <FrameLayout android:id="@id/frame"
               android:background="@drawable/settingslib_switch_bar_bg_on"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:paddingStart="@dimen/settingslib_switchbar_padding_left"
               android:paddingEnd="@dimen/settingslib_switchbar_padding_right">
    <TextView android:textAppearance="?android:attr/textAppearanceListItem"
              android:ellipsize="end"
              android:layout_gravity="center|start"
              android:id="@android:id/title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hyphenationFrequency="normalFast"
              android:paddingVertical="@dimen/settingslib_switch_title_margin"
              android:lineBreakWordStyle="phrase"
              style="@style/MainSwitchText.Settingslib" />
  </FrameLayout>
</FrameLayout>