<?xml version='1.0' encoding='utf-8' ?>
<com.google.android.setupdesign.GlifLayout android:id="@id/setup_wizard_layout"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      style="?attr/fingerprint_layout_theme" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:orientation="vertical"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                style="@style/SudContentFrame">
    <LinearLayout android:gravity="center"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="0.0dp"
                  android:layout_weight="1.0">
      <com.google.android.setupdesign.view.FillContentLayout android:gravity="center"
                            android:paddingTop="0.0dp"
                            android:paddingBottom="0.0dp"
                            android:layout_width="@dimen/fingerprint_progress_bar_max_size"
                            android:layout_height="@dimen/fingerprint_progress_bar_max_size"
                            android:layout_marginVertical="24.0dp">
        <ImageView android:id="@id/fingerprint_in_app_indicator"
                   android:padding="7.0dp"
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:src="@drawable/fingerprint_enroll_finish"
                   android:contentDescription="@android:string/fingerprint_icon_content_description"
                   android:importantForAccessibility="no"
                   style="@style/SudContentIllustration" />
      </com.google.android.setupdesign.view.FillContentLayout>
      <TextView android:layout_gravity="bottom|center"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.ErrorText" />
    </LinearLayout>
  </LinearLayout>
</com.google.android.setupdesign.GlifLayout>