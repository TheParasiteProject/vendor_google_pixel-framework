<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:gravity="center"
              android:orientation="vertical"
              android:id="@id/app_entities_header"
              android:paddingTop="@dimen/notification_importance_toggle_marginTop"
              android:paddingBottom="@dimen/notification_importance_toggle_marginTop"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="24.0dp"
              android:layout_marginEnd="16.0dp" xmlns:android="http://schemas.android.com/apk/res/android">
  <com.android.settings.notification.NotificationButtonRelativeLayout android:id="@id/priority_group"
                        android:padding="@dimen/notification_importance_button_padding"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:id="@id/icon_label_container"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
      <ImageView android:id="@id/icon"
                 android:background="@android:color/transparent"
                 android:focusable="false"
                 android:clickable="false"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_important_outline" />
      <TextView android:textAppearance="@style/TextAppearance.NotificationImportanceButton.Unselected"
                android:ellipsize="end"
                android:id="@id/label"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/notification_priority_title"
                android:maxLines="1"
                android:layout_marginStart="@dimen/notification_importance_drawable_padding" />
    </LinearLayout>
    <TextView android:textAppearance="@style/TextAppearance.NotificationImportanceDetail"
              android:ellipsize="end"
              android:id="@id/summary"
              android:paddingTop="@dimen/notification_importance_button_padding"
              android:focusable="false"
              android:visibility="gone"
              android:clickable="false"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/notification_channel_summary_priority"
              android:maxLines="4"
              android:layout_below="@id/icon_label_container" />
  </com.android.settings.notification.NotificationButtonRelativeLayout>
  <com.android.settings.notification.NotificationButtonRelativeLayout android:id="@id/alert"
                        android:padding="@dimen/notification_importance_button_padding"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/notification_importance_button_separation">
    <LinearLayout android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:id="@id/icon_label_container"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
      <ImageView android:id="@id/icon"
                 android:background="@android:color/transparent"
                 android:focusable="false"
                 android:clickable="false"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_notifications_alert" />
      <TextView android:textAppearance="@style/TextAppearance.NotificationImportanceButton.Unselected"
                android:ellipsize="end"
                android:id="@id/label"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/notification_alert_title"
                android:maxLines="1"
                android:layout_marginStart="@dimen/notification_importance_drawable_padding" />
    </LinearLayout>
    <TextView android:textAppearance="@style/TextAppearance.NotificationImportanceDetail"
              android:ellipsize="end"
              android:id="@id/summary"
              android:paddingTop="@dimen/notification_importance_button_padding"
              android:focusable="false"
              android:visibility="gone"
              android:clickable="false"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/notification_channel_summary_default"
              android:maxLines="2"
              android:layout_below="@id/icon_label_container" />
  </com.android.settings.notification.NotificationButtonRelativeLayout>
  <com.android.settings.notification.NotificationButtonRelativeLayout android:id="@id/silence"
                        android:padding="@dimen/notification_importance_button_padding"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/notification_importance_button_separation">
    <LinearLayout android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:id="@id/icon_label_container"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
      <ImageView android:id="@id/icon"
                 android:background="@android:color/transparent"
                 android:focusable="false"
                 android:clickable="false"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_notifications_off_24dp" />
      <TextView android:textAppearance="@style/TextAppearance.NotificationImportanceButton.Unselected"
                android:ellipsize="end"
                android:id="@id/label"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/notification_silence_title"
                android:maxLines="1"
                android:layout_marginStart="@dimen/notification_importance_drawable_padding" />
    </LinearLayout>
    <TextView android:textAppearance="@style/TextAppearance.NotificationImportanceDetail"
              android:ellipsize="end"
              android:id="@id/summary"
              android:paddingTop="@dimen/notification_importance_button_padding"
              android:focusable="false"
              android:visibility="gone"
              android:clickable="false"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/notification_conversation_summary_low"
              android:maxLines="2"
              android:layout_below="@id/icon_label_container" />
  </com.android.settings.notification.NotificationButtonRelativeLayout>
</LinearLayout>