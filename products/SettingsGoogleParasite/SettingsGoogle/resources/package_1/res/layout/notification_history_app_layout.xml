<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
  <androidx.constraintlayout.widget.ConstraintLayout android:id="@id/app_header"
                        android:background="?android:attr/selectableItemBackground"
                        android:paddingTop="20.0dp"
                        android:paddingBottom="18.0dp"
                        android:clipChildren="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="16.0dp">
    <ImageView android:id="@id/icon"
               android:layout_width="24.0dp"
               android:layout_height="24.0dp"
               android:scaleType="centerInside"
               settings:layout_constraintBottom_toBottomOf="parent"
               settings:layout_constraintStart_toStartOf="parent"
               settings:layout_constraintTop_toTopOf="parent" />
    <TextView android:textAppearance="@android:style/TextAppearance.Holo.Light.Large"
              android:ellipsize="end"
              android:id="@id/label"
              android:layout_width="0.0dp"
              android:layout_height="wrap_content"
              android:lines="1"
              android:textDirection="locale"
              android:layout_marginStart="14.0dp"
              settings:layout_constraintBottom_toTopOf="@id/count"
              settings:layout_constraintEnd_toStartOf="@id/expand_button_wrapper"
              settings:layout_constraintStart_toEndOf="@id/icon"
              settings:layout_constraintTop_toTopOf="parent" />
    <TextView android:textAppearance="@android:style/TextAppearance.Holo.CalendarViewWeekDayView"
              android:id="@id/count"
              android:paddingTop="4.0dp"
              android:layout_width="0.0dp"
              android:layout_height="wrap_content"
              android:textDirection="locale"
              android:layout_marginStart="14.0dp"
              settings:layout_constraintBottom_toBottomOf="parent"
              settings:layout_constraintEnd_toStartOf="@id/expand_button_wrapper"
              settings:layout_constraintStart_toEndOf="@id/icon"
              settings:layout_constraintTop_toBottomOf="@id/label" />
    <FrameLayout android:id="@id/expand_button_wrapper"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 settings:layout_constraintBottom_toBottomOf="parent"
                 settings:layout_constraintEnd_toEndOf="parent"
                 settings:layout_constraintTop_toTopOf="parent">
      <include android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               layout="@android:layout/notification_material_action" />
    </FrameLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>
  <View android:background="?android:attr/listDivider"
        android:layout_width="fill_parent"
        android:layout_height="1.0dp" />
  <androidx.constraintlayout.widget.ConstraintLayout android:id="@id/notification_list_wrapper"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
    <com.android.settings.notification.history.NotificationHistoryRecyclerView android:id="@id/notification_list"
                          android:clipChildren="true"
                          android:clipToPadding="true"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:importantForAccessibility="yes"
                          android:clipToOutline="true"
                          settings:layout_constrainedHeight="true"
                          settings:layout_constraintBottom_toBottomOf="parent"
                          settings:layout_constraintEnd_toEndOf="parent"
                          settings:layout_constraintHeight_max="500.0dp"
                          settings:layout_constraintHeight_min="48.0dp"
                          settings:layout_constraintStart_toStartOf="parent"
                          settings:layout_constraintTop_toTopOf="parent" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>